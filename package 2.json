{
  "name": "belge-danismanlik-otomasyonu",
  "version": "1.0.0",
  "description": "Kurumsal Belge Danışmanlık Hizmeti Otomasyon Sistemi - Firma tanımlama, belge teşvik, takip ve yönetim sistemi",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npm run dev",
    "frontend:dev": "cd frontend && npm start",
    "backend:install": "cd backend && npm install",
    "frontend:install": "cd frontend && npm install",
    "install-all": "npm install && npm run backend:install && npm run frontend:install",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start"
  },
  "keywords": [
    "automation",
    "document-management",
    "consulting",
    "react",
    "nodejs",
    "mongodb",
    "belge-takip"
  ],
  "author": "Belge Danışmanlık Ekibi",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 